@model Service
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Add Position</h3></div>
                    <div class="card-body">
                        <form method="post" action="/admin/Service/Add">
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <div class="form-floating mb-3 mb-md-3">
                                        <input asp-for="Title" type="text" class="form-control" id="positionname" placeholder="enter Title" />
                                        <span asp-validation-for="Title" style="color:red"></span>
                                        <label for="inputFirstName">Title</label>
                                    </div>
                                    <div class="form-floating mb-3 mb-md-3">
                                        <input asp-for="Description" type="text" class="form-control" id="positionname" placeholder="enter Description" />
                                        <span asp-validation-for="Description" style="color:red"></span>
                                        <label for="inputFirstName">Description</label>
                                    </div>
                                    <div class="form-floating mb-3 mb-md-3">
                                        <input asp-for="IconName" type="text" class="form-control" id="positionname" placeholder="enter IconName" />
                                        <span asp-validation-for="IconName" style="color:red"></span>
                                        <label for="inputFirstName">IconName</label>
                                    </div>
                                    <div class="form-floating mb-3 mb-md-3">
                                        <input asp-for="ShowOnPage" type="checkbox"  class="form-control" id="positionname"/>
                                        <span asp-validation-for="ShowOnPage" style="color:red"></span>
                                        <label for="inputFirstName">ShowOnPage</label>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 mb-0">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

