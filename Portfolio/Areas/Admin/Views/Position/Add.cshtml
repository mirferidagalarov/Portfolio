@model Position
@{
    Layout = "_Layout";
}


<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Add Position</h3></div>
                    <div class="card-body">
                        <form method="post" action="/admin/Position/Add">
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <div class="form-floating mb-3 mb-md-3">
                                        <input asp-for="Name" type="text" class="form-control" id="positionname" placeholder="enter Position" />
                                        <span asp-validation-for="Name" style="color:red"></span>
                                        <label for="inputFirstName">Position Name</label>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 mb-0">
                                <button  type="submit" class="btn btn-success">Save</button>
                            </div>
                        </form>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>